# =======================================================
# QWED Environment Configuration (Example)
# Copy this file to .env and replace with your actual keys
# =======================================================

# 1. Azure OpenAI (Primary Provider)
# Required for: Translation Layer (GPT-4)
AZURE_OPENAI_ENDPOINT="https://your-resource.openai.azure.com/"
AZURE_OPENAI_API_KEY="your_azure_api_key_here"
AZURE_OPENAI_DEPLOYMENT="gpt-4-turbo"
AZURE_OPENAI_API_VERSION="2024-02-15-preview"

# 2. Anthropic (Secondary Provider)
# Required for: Fallback & Logic Puzzles
ANTHROPIC_ENDPOINT="https://api.anthropic.com/v1"
ANTHROPIC_API_KEY="your_anthropic_api_key_here"
ANTHROPIC_DEPLOYMENT="claude-3-opus-20240229"

# 3. Old Claude Provider (Deprecated)
CLAUDE_OPUS_ENDPOINT="https://api.anthropic.com/v1"
CLAUDE_OPUS_API_KEY="your_claude_key_here"
CLAUDE_OPUS_DEPLOYMENT="claude-3-opus-20240229"

# 4. QWED Internal Keys
# Required for: Authentication
QWED_API_KEY="test_key_for_local_development"

# 4a. Database (SQLite - Development)
DATABASE_URL="sqlite:///./qwed.db"

# 4b. Database (PostgreSQL - Production)
# Uncomment below and comment SQLite for production
# DATABASE_URL="postgresql://qwed:qwed_secret@localhost:5432/qwed_db"

# 5. Agent Settings
# Controls for Agent Budgeting
MAX_DAILY_COST=10.0

# 6. Redis (Distributed Caching & Rate Limiting)
# Required for: Multi-instance deployments
REDIS_URL="redis://localhost:6379/0"
REDIS_MAX_CONNECTIONS=10
REDIS_SOCKET_TIMEOUT=5.0

# 7. OpenTelemetry (Distributed Tracing)
# Required for: Production observability
OTEL_ENABLED=true
OTLP_ENDPOINT="http://localhost:4317"
OTEL_SERVICE_NAME="qwed-api"
ENVIRONMENT="development"

# 8. Grafana (Dashboards)
# Access at: http://localhost:3000
# Default credentials: admin / qwed_admin
